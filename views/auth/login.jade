extends ../layout

block content
			form.form(role="form",name="login",method="POST", action="/login")
				h2.form-heading Please sign in
				input.form-control(type="email",placeholder="Email address",name="username")
				input.form-control(type="password",placeholder="Password",name="password")
				button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign in
				a.pull-right(href="/user/new") register to join
